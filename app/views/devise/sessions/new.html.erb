<div class="custom-container">
  <h1 class="title is-3 margin-navbar has-text-white has-text-centered vertical-spacing">Log in</h1>
  <div class="form-custom">
    <div class="has-text-centered">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'label has-text-white' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input form-input' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'label has-text-white' %>
        <%= f.password_field :password, autocomplete: "current-password", class:'input form-input' %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class:'has-text-white' %>
      </div>
      <% end %>

      <div class="field">
        <%= f.submit "Log in", class:'button is-info vertical-spacing'  %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div> 